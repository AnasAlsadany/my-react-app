{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["shared/*"],
      "@components/*": ["components/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}

